<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSurfaceVariant"
    android:layout_marginBottom="60dp"
    android:padding="20dp">

    <!-- Заголовок с фиолетовой линией -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <!-- Текст заголовка -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Издательские услуги"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/purple_80"/>

        <!-- Фиолетовая линия под текстом -->
        <View
            android:layout_width="64dp"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:background="@color/purple_40"/>
    </LinearLayout>

    <!-- Карточка с подзаголовком в фиолетовой гамме -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/purple_30"
        app:strokeWidth="1dp"
        android:backgroundTint="@color/purple_10"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Воплощаем авторские идеи в жизнь"
            android:textSize="16sp"
            android:textColor="@color/purple_70"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Список услуг -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvServices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="20dp"/>

</LinearLayout>
