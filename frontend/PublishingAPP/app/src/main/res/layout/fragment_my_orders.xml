<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?colorSurfaceVariant"
    android:paddingBottom="60dp">

    <!-- ===== ЗАГОЛОВОК В КАРТОЧКЕ ===== -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мои заказы"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/purple_80"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Все ваши текущие и завершенные заказы"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginTop="4dp"/>

            <!-- ФИЛЬТР ПО СТАТУСУ (SPINNER) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фильтр:"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"/>

                <!-- Заменяем на Spinner -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/statusFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:padding="12dp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ===== КОНТЕЙНЕР КОНТЕНТА ===== -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Загрузка -->
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <!-- Пустое состояние -->
        <LinearLayout
            android:id="@+id/emptyBlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_orders"
                app:tint="@color/purple_40"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvEmptyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="У вас пока нет заказов"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvEmptySubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Перейдите в раздел услуг и оформите первый заказ"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginTop="8dp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Список заказов -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOrders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"/>

    </FrameLayout>

</LinearLayout>