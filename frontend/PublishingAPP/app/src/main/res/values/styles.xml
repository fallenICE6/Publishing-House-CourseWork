<resources>

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="elevation">16dp</item>
    </style>

    <style name="NavItemActive">
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
    </style>

    <style name="NavItemInactive">
        <item name="android:scaleX">1.0</item>
        <item name="android:scaleY">1.0</item>
    </style>

    <style name="AppTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="AppPrimaryButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
